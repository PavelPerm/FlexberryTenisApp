  <label>{{t 'forms.i-i-s-tenis-app-bpa-match-e.games-caption'}}</label>
  {{
    flexberry-groupedit
    componentName="gamesGroupEdit"
    mainModelProjection=modelProjection
    modelProjection=modelProjection.attributes.games
    content=model.games
    readonly=readonly
    orderable=false
    class=(if model.errors.games 'error' '')
  }}
  {{flexberry-validationmessage error=model.errors.games pointing="pointing"}}
</div>

